<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        package="com.akerusan.tetromino">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:replace="android:appComponentFactory,android:icon"
            android:appComponentFactory="someString"
            tools:targetApi="p">

        <activity
                android:name="com.akerusan.tetromino.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.akerusan.tetromino.GameActivity"/>
        <activity android:name="com.akerusan.tetromino.LoginActivity"/>
        <activity android:name="com.akerusan.tetromino.RegisterActivity"/>
        <activity android:name="com.akerusan.tetromino.RankingActivity"/>
        <activity android:name="com.akerusan.tetromino.SettingsActivity"/>

    </application>

</manifest>